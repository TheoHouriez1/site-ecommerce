{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
 <div class ="container">
        <h1>User index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th> 
                    <th>Email</th>
                    <th>Roles</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.Nom }}</td>
                    <td>{{ user.Prenom }}</td>
                    <td>{{ user.email }}</td>
                    {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                    <td>

                    {% if 'ROLE_ADMIN' in user.roles %}
                         Administrateur
                        {% elseif 'ROLE_USER' in user.roles %}
                            User
                    {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-blok btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                        <a class="btn btn-blok btn-danger" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {# <a href="{{ path('app_user_new') }}">Create new</a> #}
    </div> 
{% endblock %}
