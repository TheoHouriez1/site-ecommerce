{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class ="container security-form">
        <div class ="login-form">
            <h1>Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email,{'attr':{'class':'form form-control','placeholder':'entrer votre email'}}) }}
                {{ form_row(registrationForm.LastName,{'attr':{'class':'form form-control','placeholder':'entrer votre Nom'}}) }}
                {{ form_row(registrationForm.firstName,{'attr':{'class':'form form-control','placeholder':'entrer votre Prenom'}}) }}
                {{ form_row(registrationForm.plainPassword,{'attr':{'class':'form form-control','placeholder':'entrer votre mot de passe'}}, {
                    label: 'Password'
                }) }}
                <br>
                {{ form_row(registrationForm.agreeTerms) }}
                <br>
                <button type="submit" class="btn btn-blok btn-primary">Register</button>
            {{ form_end(registrationForm) }}
            
        <div>
    <div>
{% endblock %}
