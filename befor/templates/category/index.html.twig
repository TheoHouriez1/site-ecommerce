{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
 <div class ="container">
    <h1>Category</h1>
        {% include 'layouts/_flash_message.html.twig' %}
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom de la categories</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.nameCategory }}</td>
                    <td>
                        <a class="btn btn-blok btn-primary" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                        <a class="btn btn-blok btn-danger" href="{{ path('app_category_edit', {'id': category.id}) }}" >edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <a class="btn btn-outline-primary" href="{{ path('app_category_new') }}">Create new</a>
</div>
{% endblock %}