{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class ="container">
    <h1>Produits</h1><br>
    <div class ="row">
        {% for product in products %}
    <div class ="col-md-3">
        <div class="card" style="margin-bottom : 20px;">
            <img src="{{ asset('uploads/images/'~product.image)}}" class="card-img-top" alt="...">
            <div class="card-body">
                    <a style="text-decoration: none; color: Green;" href="{{ path('app_home_product_show', {'id': product.id}) }}">
                        <h5 class="card-title">{{ product.name }}</h5>
                    </a>
                    <p class="card-text">{{ product.Description|slice(0, 50) }}...</p>
                    <a href="#" class="btn btn-outline-success">Ajouter au panier</a>
                </div>
        </div>   
        </div>
        {% endfor %}
    </div>
    <div>
{% endblock %}
