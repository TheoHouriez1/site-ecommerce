{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container"><br><br>
        <h1>Product index</h1> <br><br>
        {% include 'layouts/_flash_message.html.twig'%}
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>           
                        <th>Description</th>
                        <th>Price</th>
                        <th>stock</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.price }}{{ ' €' }}</td>
                        <td>
                        {% if product.stock > 0 %}
                            {{ product.stock }}
                        {% else %}
                            <span class="text-danger">Stock épuisé</span>
                        {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-blok btn-primary"  href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                            <a class="btn btn-blok btn-danger" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                            <a class="btn btn-outline-info" href="{{ path('app_product_stock_add', {'id': product.id}) }}">ajouté de le stock</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
        </table>
        <a class="btn-success btn btn-block" href="{{ path('app_product_new') }}">Create new</a>
    </div>
{% endblock %}
